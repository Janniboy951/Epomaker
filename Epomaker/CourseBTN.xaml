<UserControl x:Class="EpoMaker.CourseBTN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:EpoMaker.resources"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="80">
    <Grid>
        <Button x:Name="BTNCourse" Margin="10" Click="BTNCourse_Click">
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="{x:Static resx:langDE.MENU_EditUsers}" x:Name="CourseBTN_MENU_EDIT" Click="CourseBTN_MENU_EDIT_Click"/>
                    <MenuItem Header="{x:Static resx:langDE.MENU_Rename}" x:Name="CourseBTN_MENU_RENAME" Click="CourseBTN_MENU_RENAME_Click"/>
                    <MenuItem Header="{x:Static resx:langDE.MENU_Delete}" x:Name="CourseBTN_MENU_DELETE" Click="CourseBTN_MENU_DELETE_Click"/>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
    </Grid>
</UserControl>
